<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:orientation="vertical"
            android:background="@color/white"
            >
  <EditText

      android:layout_height="0dp"
      android:layout_width="match_parent"
      android:layout_weight="1"

      android:textSize="25dp"
      android:text=""
      android:id="@+id/calculation">

  </EditText>
            <EditText

                android:layout_height="0dp"
              android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:text=""
                android:id="@+id/result">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:orientation="horizontal"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginBottom="1.5dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.506"
                android:background="@color/greenish"
                android:layout_marginRight="0.8dp"

                >



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="3dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ac"
                    android:text="AC"
                    android:textSize="20dp"
                    android:background="@color/black_ash">

                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/black_ash"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/delete"
                    android:text="delete"
                    android:textSize="18dp"
                    android:background="@color/brownish">

                </Button>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:orientation="horizontal"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginBottom="1.5dp"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"

                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/seven"
                    android:text="7"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/eight"
                    android:text="8"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nine"
                    android:text="9"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/black_ash"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/divide"
                    android:text="รท"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:orientation="horizontal"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginBottom="1.5dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/four"
                    android:text="4"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/five"
                    android:text="5"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/six"
                    android:text="6"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/black_ash"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/multiply"
                    android:text="x"
                    android:textSize="30dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:orientation="horizontal"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginBottom="1.5dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/one"
                    android:text="1"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/two"
                    android:text="2"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >

                <Button
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lighash"
                    android:text="3"
                    android:textSize="40dp">

                </Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/black_ash"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:id="@+id/subtract"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.18"
            android:orientation="horizontal"
            android:layout_marginLeft="1.5dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginBottom="1.5dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="."
                    android:id="@+id/dot"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/zero"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/ash"
                android:layout_marginRight="1.5dp"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:id="@+id/equal"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>



            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@color/black_ash"
                android:layout_marginLeft="1.5dp"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:id="@+id/addition"
                    android:textSize="40dp"
                    android:background="@color/lighash">

                </Button>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>